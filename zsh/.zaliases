alias chmod="chmod --preserve-root -v"
alias chown="chown --preserve-root -v"

alias ec="emacsclient -nc"

alias d="dirs -v"
for index ({1..9}) alias "$index"="cd -${index}"; unset index

alias g="git"

alias grep="grep --color=auto"

alias ls="ls --color=auto"
alias l="ls -lh"
alias ll="ls -Alh"

function mkdcd() {
  if [[ "$#" -eq 0 ]]; then
    echo "$0: Missing operand"
    return 1
  elif [[ "$#" -gt 1 ]]; then
    echo "$0: Too many arguments"
    return 1
  fi
  mkdir "$1"
  cd "$1"
}

alias ipy="ipython"
alias py="python"
alias py2="python2"
alias py3="python3"

if (( $+commands[nvim] )); then
  alias vi="nvim"
  alias vim="nvim"
  alias view="nvim -R"
fi

if [ ! -z $EDITOR ]; then
  alias e="$EDITOR"
fi

if [ ! -z $BROWSER ]; then
  alias b="$BROWSER"
fi

if [ ! -z $PAGER ]; then
  alias p="$PAGER"
fi

