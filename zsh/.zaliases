alias chmod="chmod --preserve-root -v"
alias chown="chown --preserve-root -v"

alias d="dirs -v"
for index ({1..9}) alias "$index"="cd +${index}"; unset index

alias g="git"

alias grep="grep --color=auto"

alias ls="ls --color=auto"
alias l="ls -l"
alias ll="ls -Al"

alias ipy="ipython"
alias py="python"
alias py2="python2"
alias py3="python3"

if (( $+commands[nvim] )); then
  alias vi="nvim"
  alias vim="nvim"
  alias view="nvim -R"
fi

if [ ! -z $EDITOR ]; then
  alias e="$EDITOR"
fi

if [ ! -z $BROWSER ]; then
  alias b="$BROWSER"
fi

if [ ! -z $PAGER ]; then
  alias p="$PAGER"
fi

