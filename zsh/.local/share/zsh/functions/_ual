#compdef ual

_ual () {
    local state

    _arguments \
        '1: :->subcmd' \
        '2: :->arg'

    local -a notes
    notes=("${NOTES_PATH:-$HOME/.notes}"/*(:t:r))

    case $state in
        subcmd)
            local -a subcmds
            subcmds=(
                'edit:Create or edit the given note'
                'rm:Remove the given note'
                'ls:List all notes'
                'sync:Synchronize notes'
            )
            _describe 'command' subcmds

            compadd $notes
            ;;
        arg)
            case $line[1] in
                rm|edit) compadd $notes ;;
            esac
            ;;
    esac
}

_ual "$@"
